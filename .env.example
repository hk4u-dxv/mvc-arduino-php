# Archivo .env.example
# Copiar a .env y configurar según el entorno

# Entorno de la aplicación
# Valores posibles: development, production, testing
APP_ENV=development
APP_DEBUG=true

# Base de datos (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=localhost
DB_NAME=your_db_name
DB_USER=postgres 
DB_PASSWORD=your_db_password
DB_PORT=5432 

# Configuración del sistema
LOG_LEVEL=debug   # debug, info, warning, error, critical

# Configuración de Arduino
# Puerto serial al que está conectado el Arduino
# Windows: COMx (ejemplo: COM3)
# Linux: /dev/ttyACMx o /dev/ttyUSBx (ejemplo: /dev/ttyACM0)
# Mac: /dev/cu.usbmodemXXX o /dev/cu.usbserialXXX
ARDUINO_PORT=COM3

# Velocidad de comunicación (baudrate)
# Debe coincidir con la configurada en el sketch de Arduino
ARDUINO_BAUDRATE=9600

# Simulación de datos
# Establecer a true para generar datos aleatorios cuando no hay conexión con Arduino
# Útil para desarrollo y pruebas sin hardware conectado
ARDUINO_SIMULATE=false

